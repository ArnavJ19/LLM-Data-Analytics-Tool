# Environment Configuration Template for Data Analytics Web Application
# Copy this file to .env and customize the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, production, testing)
APP_ENV=development

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application version
APP_VERSION=1.0.0

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# UI theme settings
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730

# =============================================================================
# LLM / OLLAMA CONFIGURATION
# =============================================================================

# OLLAMA server settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30

# Alternative models (comma-separated)
OLLAMA_ALTERNATIVE_MODELS=llama3.2:3b

# LLM generation parameters
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_MAX_TOKENS=1000

# Enable/disable LLM features
ENABLE_LLM_INSIGHTS=true
ENABLE_DATA_CHAT=true

# =============================================================================
# DATA PROCESSING SETTINGS
# =============================================================================

# File upload limits
MAX_FILE_SIZE_MB=100
MAX_ROWS_PREVIEW=100
MAX_COLUMNS_ANALYSIS=50

# Upload directory
UPLOAD_DIR=uploads

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=csv,xlsx,xls,json

# Data analysis settings
CORRELATION_THRESHOLD=0.5
MISSING_THRESHOLD=0.5
HIGH_CARDINALITY_THRESHOLD=0.8
OUTLIER_METHODS=iqr,zscore

# Statistical analysis settings
NORMALITY_TEST_SAMPLE_SIZE=5000
CONFIDENCE_LEVEL=0.05

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================

# Chart settings
DEFAULT_CHART_TEMPLATE=plotly_white
DEFAULT_CHART_HEIGHT=400
DEFAULT_CHART_WIDTH=600
HEATMAP_SIZE=600

# Chart limits (for performance)
MAX_CATEGORIES_BAR_CHART=20
MAX_VARIABLES_CORRELATION=20
MAX_VARIABLES_SCATTER_MATRIX=5

# Color palette (comma-separated hex colors)
COLOR_PALETTE=#1f77b4,#ff7f0e,#2ca02c,#d62728,#9467bd,#8c564b,#e377c2,#7f7f7f,#bcbd22,#17becf

# =============================================================================
# CACHING AND PERFORMANCE
# =============================================================================

# Enable caching
ENABLE_CACHING=true

# Cache time-to-live (seconds)
CACHE_TTL=3600

# Redis settings (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Maximum concurrent users
MAX_CONCURRENT_USERS=10

# =============================================================================
# EXPORT SETTINGS
# =============================================================================

# Export functionality
ENABLE_EXPORT=true
SUPPORTED_EXPORT_FORMATS=markdown,html,json
DEFAULT_EXPORT_FORMAT=markdown

# Export settings
INCLUDE_VISUALIZATIONS_IN_EXPORT=true
INCLUDE_RAW_DATA_IN_EXPORT=false
MAX_REPORT_SIZE_MB=50

# File naming
TIMESTAMP_FORMAT=%Y%m%d_%H%M%S
REPORT_PREFIX=data_analysis_report

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database URL (for storing analysis results)
# Examples:
# PostgreSQL: postgresql://user:password@localhost/dbname
# SQLite: sqlite:///./analytics.db
# MySQL: mysql://user:password@localhost/dbname
DATABASE_URL=

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management
SECRET_KEY=your-secret-key-here-change-in-production

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Authentication settings (if implementing auth)
ENABLE_AUTHENTICATION=false
AUTH_PROVIDER=local
AUTH_SECRET_KEY=another-secret-key

# Rate limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log file settings
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# Monitoring
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_ENDPOINT=/_health

# Metrics collection
ENABLE_METRICS=false
METRICS_ENDPOINT=/_metrics

# Error tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only used when APP_ENV=development)
DEV_AUTO_RELOAD=true
DEV_SHOW_ERROR_DETAILS=true
DEV_ENABLE_DEBUG_TOOLBAR=false

# Sample data generation
GENERATE_SAMPLE_DATA_ON_STARTUP=true
SAMPLE_DATA_SIZE=1000

# Testing settings
ENABLE_TEST_ENDPOINTS=false
TEST_DATA_DIR=test_data

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_CHAT_INTERFACE=true
ENABLE_ADVANCED_SETTINGS=true
ENABLE_EXPORT_FUNCTIONALITY=true
ENABLE_SAMPLE_DATASETS=true
ENABLE_DATA_UPLOAD=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_AUTO_INSIGHTS=true

# =============================================================================
# CLOUD PROVIDER SETTINGS (if deploying to cloud)
# =============================================================================

# AWS settings
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Google Cloud settings
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure settings
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables below
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env and modify values as needed
# 2. Never commit .env file to version control
# 3. Use .env.production for production deployments
# 4. Some settings may require application restart to take effect
# 5. Boolean values should be: true/false (lowercase)
# 6. Numeric values should not be quoted
# 7. String values with spaces should be quoted: "value with spaces"